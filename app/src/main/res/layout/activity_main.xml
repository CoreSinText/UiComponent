<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/txtNama"
       android:text="@string/nama"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:layout_marginStart="30dp"
       android:textSize="25sp"
       android:textStyle="bold"
       android:fontFamily="sans-serif-thin"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
      />
   <TextView
       android:id="@+id/txtGender"
       android:text="@string/gender"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
       android:layout_marginStart="30dp"
       android:textSize="25sp"
       android:textStyle="bold"
       android:fontFamily="sans-serif-thin"
       app:layout_constraintTop_toTopOf="@id/txtNama"
       app:layout_constraintStart_toStartOf="parent"
       />
   <TextView
       android:id="@+id/txtHobi"
       android:text="@string/hoby"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
       android:layout_marginStart="30dp"
       android:textSize="25sp"
       android:textStyle="bold"
       android:fontFamily="sans-serif-thin"
       app:layout_constraintTop_toTopOf="@id/txtGender"
       app:layout_constraintStart_toStartOf="parent"
       />
   <EditText
       android:id="@+id/editNama"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:inputType="textPersonName"
       android:layout_marginStart="30dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="30dp"
       android:ems="10"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toEndOf="@+id/txtNama"
       app:layout_constraintEnd_toEndOf="parent"

/>
   <RadioGroup
       android:id="@+id/radioGroup"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintTop_toBottomOf="@+id/editNama"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@id/txtGender"
       android:layout_marginTop="5dp"
       android:layout_marginEnd="30dp"
       android:layout_marginStart="20dp">

       <RadioButton
           android:id="@+id/radioPria"
           android:text="Pria"
           android:textStyle="bold"
           android:textSize="15sp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"

           />
      <RadioButton
         android:id="@+id/radioWanita"
         android:text="Wanita"
          android:textStyle="bold"
          android:textSize="15sp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:layout_weight="1"
         />
   </RadioGroup>
   <CheckBox
       android:id="@+id/checkCoding"
       android:text="Coding"
       android:layout_width="0dp"
       android:textSize="15sp"
       android:textStyle="bold"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toEndOf="@id/txtHobi"
       app:layout_constraintTop_toBottomOf="@id/radioGroup"
       android:layout_marginStart="50dp"

       />
   <CheckBox
       android:id="@+id/checkTraveling"
       android:text="Traveling"
       android:layout_width="0dp"
       android:textSize="15sp"
       android:textStyle="bold"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toEndOf="@id/checkCoding"
       app:layout_constraintTop_toBottomOf="@id/radioGroup"
       android:layout_marginStart="20dp"

       />
   <CheckBox
       android:id="@+id/checkKuliner"
       android:text="Kuliner"
       android:layout_width="0dp"
       android:textSize="15sp"
       android:textStyle="bold"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toEndOf="@id/txtHobi"
       app:layout_constraintTop_toBottomOf="@id/checkCoding"
       android:layout_marginTop="10dp"
       android:layout_marginStart="50dp"

       />
   <CheckBox
       android:id="@+id/checkGame"
       android:text="Main Game"
       android:layout_width="0dp"
       android:textSize="15sp"
       android:textStyle="bold"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toEndOf="@id/checkCoding"
       app:layout_constraintTop_toBottomOf="@id/checkTraveling"
       android:layout_marginStart="20dp"
       android:layout_marginTop="10dp"

       />
   <Button
       android:id="@+id/btnInput"
      android:text="Input"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"
       android:background="@color/green"
       android:textColor="@color/white"
      app:layout_constraintTop_toBottomOf="@id/checkKuliner"
      />
   <Button
       android:id="@+id/btnCancel"
       android:text="Cancel"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"
       android:background="@color/red"
       android:textColor="@color/white"
       app:layout_constraintTop_toBottomOf="@id/btnInput"
       />

</android.support.constraint.ConstraintLayout>